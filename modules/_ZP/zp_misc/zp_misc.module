 * 
 * Example of using:
 * 
 * uasort($array_with_elements_contained_key_weight, 'zp_misc_sortArrayByWeight');
 */
function zp_misc_sortArrayByWeight($a, $b) 
{
    if ($a['weight'] == $b['weight']) {
        return 0;
    }
    return ($a['weight'] < $b['weight']) ? -1 : 1;
}


